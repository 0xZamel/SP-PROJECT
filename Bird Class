class Birdd
{
private:

    int CurrentSprite = 0;
    Sprite bird[3];
    Texture textures[3];
    int rotation = 0;
    int gravity = 2;
    Clock ForWing;
    Clock dtt;


public:
    Birdd(Sprite Bird[], int PosX, int PosY, float Scale, Texture Tex[])
    {
        for (int i = 0; i < 3; i++)
        {
            bird[i] = Bird[i];
            bird[i].setTexture(Tex[i]);
            bird[i].setPosition(PosX, PosY);
            bird[i].setScale(Scale, Scale);
            bird[i].setOrigin(bird[i].getGlobalBounds().width / 2, bird[i].getGlobalBounds().height / 2);
        }
    }

    Sprite DisplayBird()
    {
        if (ForWing.getElapsedTime().asSeconds() >= 0.05)
        {
            CurrentSprite++;
            if (CurrentSprite == 3)
                CurrentSprite = 0;

            ForWing.restart();
        }
        return bird[CurrentSprite];
    }

    void GravAndVelo(float dt)
    {

    }

    void Rotation()
    {
        if (Keyboard::isKeyPressed(Keyboard::Up))
        {
            
            if (rotation >= - 30)
                rotation -= 12;
        }
        
        if (Keyboard::isKeyPressed(Keyboard::Down))
        {
            if (rotation <= 50)
                rotation += 3;
        }
            bird[CurrentSprite].setRotation(rotation);
    }


};
